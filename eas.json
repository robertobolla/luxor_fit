{
    "cli": {
        "version": ">= 5.0.0",
        "appVersionSource": "remote"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "ios": {
                "resourceClass": "default",
                "simulator": false,
                "buildConfiguration": "Debug"
            },
            "android": {
                "gradleCommand": ":app:assembleDebug",
                "buildType": "apk"
            }
        },
        "preview": {
            "distribution": "internal",
            "android": {
                "buildType": "apk"
            },
            "ios": {
                "resourceClass": "medium"
            }
        },
        "production": {
            "distribution": "store",
            "ios": {
                "resourceClass": "medium",
                "simulator": false
            },
            "android": {
                "buildType": "apk"
            }
        }
    },
    "submit": {
        "production": {}
    }
}